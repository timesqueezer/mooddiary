server {
	listen	80;
	listen	[::]:80;
	server_name .councilofcode.org;
	return 301 https://mooddiary.org$request_uri;
}

server {
	listen	443;
	listen	[::]:443;
	server_name	*.councilofcode.org;

	ssl_certificate /etc/ssl/private/councilofcode.crt;
	ssl_certificate_key /etc/ssl/keys/councilofcode.key;

	return 301 https://mooddiary.org$request_uri;

}
server {
	listen       443 ssl;
	listen	     [::]:443 ssl;
	server_name  councilofcode.org;

	ssl_certificate /etc/ssl/private/councilofcode.crt;
	ssl_certificate_key /etc/ssl/private/councilofcode.key;

	access_log	/var/log/nginx/mooddiary_access.log;
	error_log	/var/log/nginx/mooddiary_error.log;

	location / {
		include		uwsgi_params;
		uwsgi_pass	unix:/run/uwsgi/mooddiary.sock;

	}

}
